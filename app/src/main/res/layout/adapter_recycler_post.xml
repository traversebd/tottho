<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:translationZ="2dp"
        app:cardBackgroundColor="@color/md_white_1000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:weightSum="6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/demo_name"
                android:layout_marginLeft="24dp"/>

            <TextView
                android:id="@+id/Email"
                android:layout_below="@id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/demo_mail"
                android:layout_marginLeft="24dp"/>

            <TextView
                android:id="@+id/MobileNo"
                android:layout_below="@id/Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/demo_mobile"
                android:layout_marginLeft="24dp"/>

            <TextView
                android:id="@+id/WebsiteLink"
                android:layout_below="@id/MobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/demo_website_link"
                android:layout_marginLeft="24dp"/>

            <TextView
                android:id="@+id/Address"
                android:layout_below="@id/WebsiteLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/demo_address"
                android:layout_marginLeft="24dp"/>


            <LinearLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:elevation="8dp"
                android:orientation="vertical"
                android:background="@drawable/a_roundbg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:translationZ="4dp">

                <ImageView
                    android:src="@drawable/ic_call"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="4dp" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:elevation="8dp"
        android:orientation="vertical"
        android:background="@drawable/a_roundbg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationZ="4dp">

        <ImageView
            android:src="@drawable/ic_link"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="4dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>